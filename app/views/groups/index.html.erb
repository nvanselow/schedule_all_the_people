<h2>Groups</h2>

<ul>
  <% @groups.each do |group| %>
    <li>
      <%= group.name %>
      <% if group.people.size > 1 %>
        (<%= group.people.size %> people)
      <% elsif group.people.size == 1 %>
        (1 person)
      <% else %>
        (No people in this group)
      <% end %>
      <%= button_to "Delete",
          group_path(group),
          method: "delete",
          id: "delete_#{group.id}",
          class: "button alert small" %>
    </li>
  <% end %>
</ul>
