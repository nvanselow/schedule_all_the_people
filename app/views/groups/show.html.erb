<h2><%= @group.name %></h2>

<div class="people">
  <% if @people.empty? %>
    <p>
      There are no people in this group. Add people above.
    </p>
  <% else %>
    <h3>People:</h3>
    <p>
      <i>Note:</i> Due to Google Calendar limits, you may only add up to 90 people
      to a group.
    </p>
    <ul class="people-list">
      <% @people.each do |person| %>
        <li class="person">
          <p class="person-info">
            <%= person.email %>
            <% if person.name %>
              (<%= person.name %>)
            <% end %>
          </p>
          <%= link_to "Remove", group_person_path(@group, person),
              method: 'DELETE',
              class:"delete-person button alert small",
              id: "delete_#{person.id}"
          %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= render partial: 'people/form' %>
