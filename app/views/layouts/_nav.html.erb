<nav>
  <div class="top-bar">
    <div class="top-bar-left">
      <ul class="menu">
        <li>
          <%= link_to "Schedule All the People",
              root_path,
              class: 'logo'
          %>
        </li>
        <% if current_user %>
          <li><%= link_to "Create an Event", new_event_path %></li>
        <% end %>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu">
        <% if current_user %>
          <li><%= image_tag current_user.avatar_url, size: "35" %></li>
          <li class="menu-text">
            <%= current_user.email %>
          </li>
          <li>
            <%= button_to "Sign Out",
                sessions_path,
                method: :delete,
                class: "button"
            %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign In", '/auth/google_oauth2', class: "button" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
